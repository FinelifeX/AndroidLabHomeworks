<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img"
        android:layout_margin="16dp"
        android:src="@mipmap/ic_cake"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Название Блюда"
        android:textSize="20sp"
        android:layout_toRightOf="@id/img"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="Время готовки"
        android:textSize="15sp"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/name"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difficulty"
        android:text="Сложность"
        android:textSize="15sp"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/time"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:text="Краткое описание"
        android:textSize="15sp"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/difficulty"
        android:layout_marginLeft="16dp"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_below="@id/description" ></View>

</RelativeLayout>